<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".NewsPaperActivity">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily News Update"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/kalerkonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/kalerkonto"
                android:onClick="Kalerkonto" />

            <Button
                android:id="@+id/prothom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/prothomalo"
                android:onClick="prothomAlo"
                />

            <Button
                android:id="@+id/jugantor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/jugantor"
                android:onClick="jugantor" />

            <Button
                android:id="@+id/samakal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/samakal"
                android:onClick="samakal"
                />

            <Button
                android:id="@+id/azadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ittefaq"
                android:onClick="azadi" />

            <Button
                android:id="@+id/noyadigonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/noyadigonto"
                android:onClick="noyadigonto"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Business Update"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ctg Stock-Exchang"
        android:textStyle="bold"
        android:onClick="ctgstockxchng"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share market Bd"
        android:textStyle="bold"
        android:onClick="sharebd"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Bangladesh"
        android:textStyle="bold"
        android:onClick="shreBiz"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biz Tech 24"
            android:onClick="Bitech"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICT News"
            android:onClick="ictnews"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techtunes"
            android:onClick="techhunt"
            android:layout_marginLeft="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BD 24"
            android:onClick="bd24"
            android:layout_marginLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BD 24"
            android:onClick="bd24"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sports Update"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    />
    <Button
        android:id="@+id/criket"
        android:onClick="criket"
        android:text="Cricket"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_carve_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/football"
        android:onClick="football"
        android:text="Football"
        android:textStyle="bold"
        android:background="@drawable/edit_carve_text"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Daily Jobs Update"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="BD jobs.com"
        android:background="@drawable/edit_carve_text"
        android:textStyle="bold"
        android:onClick="Bdjobs"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chakri.com"
        android:background="@drawable/edit_carve_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:onClick="Chakri"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOB.COM.BD"
        android:background="@drawable/edit_carve_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:onClick="jobcombd"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bd-career"
        android:background="@drawable/edit_carve_text"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:onClick="bdcareer"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="International News"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bbc"
            android:onClick="bbc"
            android:text="BBC"
            android:textStyle="bold"
            android:background="@drawable/edit_carve_text"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cnn"
            android:layout_toRightOf="@id/samakal"
            android:onClick="cnn"
            android:text="CNN"
            android:textStyle="bold"
            android:background="@drawable/edit_carve_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

</ScrollView>