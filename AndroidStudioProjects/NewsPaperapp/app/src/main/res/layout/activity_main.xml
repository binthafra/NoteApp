<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Daily News Update"
      android:gravity="center"
      android:textSize="25dp"
      android:textColor="#161616"
      android:textStyle="bold"
      />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/prothom"
                android:background="@drawable/prothom"
                android:layout_marginRight="10dp"
                android:onClick="prothomAlo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/jugantor"
                android:background="@drawable/juga"
                android:layout_marginRight="10dp"
                android:onClick="jugantor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/samakal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/samakal"
                android:layout_marginRight="10dp"
                android:onClick="samakal" />
            <Button
                android:id="@+id/azadi"
                android:background="@drawable/azadi"
                android:onClick="azadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Sports Update"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="#161616"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/criket"
        android:background="@drawable/criket"
        android:onClick="criket"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/football"
        android:background="@drawable/football"
        android:onClick="football"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Jobs Update"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="#161616"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BD jobs.com"
        android:background="#ffff"
        android:textStyle="bold"
        android:onClick="Bdjobs"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chakri.com"
        android:background="#ffff"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:onClick="Chakri"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="International News"
        android:textColor="#424343"
        android:padding="10dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bbc"
            android:background="@drawable/bbc"
            android:onClick="bbc"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cnn"
            android:layout_toRightOf="@id/samakal"
            android:background="@drawable/cnn"
            android:onClick="cnn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>